<% form_tag admin_reset_password_path do %>

  <%= hidden_field_tag :token, @user.token %>

  <ul>
  <li><label for="password"><%= t("Password") %></label>
  <%= password_field :user, :password, :size => 20, :class => 'text' %></li>
  <li><label for="password"><%= t("Password Confirm") %></label>
  <%= password_field :user, :password_confirmation, :size => 20, :class => 'text' %></li>
  <li><%= submit_tag t("Change password"), :class => 'button' %> <%= link_to t("I remember my password"), admin_sign_in_path %></li>
  </ul>

<% end %>