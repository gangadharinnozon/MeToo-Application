<% content_for :sidebar do %>
  <%= typus_block :model => @resource[:self], :partial => :show_sidebar %>
  <%= actions %>
<% end %>

<%= typus_block :model => @resource[:self], :partial => :show %>

<h2><%= link_to t("Dashboard"), admin_dashboard_path %> &rsaquo; <%= link_to t(@resource[:class_name_humanized].pluralize), :action => 'index' %> &rsaquo; <%= t("Show") %></h2>

<%= typus_block :model => @resource[:self], :partial => :show_top %>

<dl>
<% @resource[:class].columns.map { |u| u.name }.each do |column| %>
  <dt><%=h column.humanize %></dt>
  <dd><%=h (!@item.send(column).blank?) ? @item.send(column) : "nil" %></dd>
<% end %>
</dl>

<%= typus_block :model => @resource[:self], :partial => :show_bottom %>