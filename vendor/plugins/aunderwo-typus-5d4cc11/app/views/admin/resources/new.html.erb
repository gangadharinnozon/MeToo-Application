<% content_for :sidebar do %>
  <%= typus_block :model => @resource[:self], :partial => :new_sidebar %>
  <%= actions %>
<% end %>

<%= typus_block :model => @resource[:self], :partial => :new %>

<%= display_link_to_previous if params[:back_to] %>

<h2><%= link_to t("Dashboard"), admin_dashboard_path %> &rsaquo; <%= link_to t(@resource[:class_name_humanized].pluralize), :action => 'index' %> &rsaquo; <%= t("New") %></h2>

<%= typus_block :model => @resource[:self], :partial => :new_top %>

<% form_for @item, 
            :url  => { :action => 'create', 
                       :back_to => params[:back_to], 
                       :selected => params[:selected], 
                       :resource => params[:resource], 
                       :resource_id => params[:resource_id] }, 
            :html => { :multipart => true } do |f| %>
  <%= build_form(@fields) %>
  <p><%= submit_tag t("Create entry"), :class => 'button' %></p>
<% end %>

<%= typus_block :model => @resource[:self], :partial => :new_bottom %>